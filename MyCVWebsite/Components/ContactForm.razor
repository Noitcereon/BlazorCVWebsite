@using Models

<EditForm Model="@_newContactForm" OnValidSubmit="SendEmail">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="full-name-input">Full Name</label>
        <InputText @bind-Value="_newContactForm.FullName"
                   class="form-control" id="full-name-input" placeholder="John Doe..." />
    </div>
    <div class="form-group">
        <label for="email-input">E-mail</label>
        <InputText @bind-Value="_newContactForm.Email"
                   class="form-control" id="email-input" placeholder="example@mail.com..." />
    </div>
    <div class="form-group">
        <label for="subject-input">Subject</label>
        <InputText @bind-Value="_newContactForm.Subject"
                   class="form-control" id="subject-input" placeholder="Subject..." />
    </div>
    <div class="form-group">
        <label for="message-input">Message</label>
        <InputTextArea @bind-Value="_newContactForm.Message"
                       class="form-control" id="message-input"
                       placeholder="Enter your message here..." />
    </div>
    <button class="btn btn-primary">Send</button>
</EditForm>

